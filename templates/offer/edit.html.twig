{% extends 'base.html.twig' %}


{% block title %}
	{{ parent() }}
	- Création offers entreprise
{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class="row">
		<div class="col-2 p-0 m-0">
			{% include "partials/_sidebar.html.twig" %}
		</div>
		<div class="col-10">
			{% block content %}
			<h4 class="text-center">
				Créez votre profil entreprise
			</h4>
			<div class="rox">
				<div class="col-12">
					{{ form_start(form) }}
					<div class="row g-3">
						<div class="col">
							{{ form_row(form.title)}}
						</div>
						<div class="col">
							{{ form_row(form.location)}}
						</div>

					</div>
					<div class="row g-3">
						<div class="col">{{ form_row(form.contractType)}}</div>
						<div class="col">{{ form_row(form.salary)}}</div>
					
					</div>
					<div class="row g-3">
						<div class="col">{{ form_row(form.shortDescription)}}</div>
						
					</div>
					<div class="row g-3">
						<div class="col">{{ form_row(form.content)}}</div>
					
						
					</div>
					{{form_row(form.tags)}}
				
			
					<button type = "submit" class="btn btn-info">Modifier</button>
					{{ form_end(form) }}


				</div>

			</div>
			{% endblock %}

		</div>
	</div>
</div>

	
{% endblock %}
