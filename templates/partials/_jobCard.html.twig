<div class="col mb-4">
    <div class="card h-100">
        <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
                <img src="{{offer.entrepriseProfil.logo}}" class="card-img-top" alt="Logo de l'entreprise" style="height: 50px; width: 50px; object-fit: cover;border-radius: 50%;"/>
                <p class="card-subtitle text-end ms-2">
                    <i class="bi bi-geo-alt-fill"></i>
                    Localisation
                </p>
            </div>
            <h5 class="card-title">{{offer.title}}</h5>
            <div class="d-flex justify-content-between">
                <p class="card-text">{{offer.entrepriseProfil.name}}</p>
                <p class="card-text">{{offer.contractType.name}}</p>
                <p class="card-text">{{offer.salary/100}}</p>
            </div>
            <p class="card-text">{{offer.shortDescription}}</p>
            <div class="mb-1">
                <p class="card-text">Tags</p>
                <ul class="list-inline">
                    {# {% for tag in tags %}
                    <li class="list-inline-item">
                        <span class="badge bg-primary">{{offer.tags.name}}</span>
                    </li>
                    {% endfor %}
                    #}
                </ul>
            </div>
            <p class="card-text">
                <small class="text-muted">
                    <i class="bi bi-clock"></i>
                    {# {{offer.createdAt|ago(local='fr')}} #}
                </small>
            </p>
        </div>
        <div class="card-footer text-center">
       
            
                {# {{dump(offer)}} #}
                <a href="{{path('app_offre_emploi_show',{'slug':offer.slug})}}" class="btn btn-primary">Postuler</a>
            
           
        </div>
    </div>
</div>