<div class="col-md-6 mb-4">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                {# {{dump(entreprise)}} #}
                <img src="{{entreprise.logo}}" class="img-fluid rounded-start" alt="Logo de l'entreprise" style="height: 100%; width: 100%; object-fit: cover;"/>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{entreprise.name}}</h5>
                    <p class="card-text">{{entreprise.description}}</p>
                    <p class="card-text">
                        <i class="bi bi-geo-alt-fill"></i>
                        Adresse: {{entreprise.address}}, {{entreprise.city}}, {{entreprise.country}}<br>
                        
                        <i class="bi bi-telephone-fill"></i>{{entreprise.phoneNumber}}<br>
                        <i class="bi bi-enveloppe-fill"></i> {{entreprise.email}}
                    </p>
                    <a href="mailto:{{entreprise.email}}" class="btn btn-primary">Envoyer un email</a>
                    <a href="tel:{{entreprise.phoneNumber}}" class="btn btn-primary">Appeler</a>
                    <a href="site:{{entreprise.website}}" class="btn btn-primary">Contacter</a>
                </div>
            </div>
        </div>
    </div>
</div>